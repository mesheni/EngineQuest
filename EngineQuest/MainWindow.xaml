<Window x:Class="EngineQuest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EngineQuest"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <MediaElement Name="BackgroundMusic" LoadedBehavior="Manual" UnloadedBehavior="Stop" />

        <!-- Фон -->
        <Image Name="BackgroundImage" Stretch="Fill" />

        <!-- Основной интерфейс -->
        <StackPanel VerticalAlignment="Bottom" Background="#AA000000" Width="auto" Height="auto">
            <Label Name="SpeakerLabel" Foreground="White" FontWeight="Bold" FontSize="16" />
            <TextBlock Name="DialogueTextBlock" Foreground="White" TextWrapping="Wrap" Margin="0,5" />

            <!-- Панель кнопок выбора -->
            <StackPanel Name="ChoicesPanel" Orientation="Vertical" Margin="0,10" />
        </StackPanel>
    </Grid>
</Window>
